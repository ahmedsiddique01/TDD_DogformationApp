<resources>

    <style name="Theme.Mine" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sapphirePrimary</item>
        <item name="colorPrimaryVariant">@color/sapphirePrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/sapphireSecondary</item>
        <item name="colorSecondaryVariant">@color/sapphireSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/sapphirePrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Mine</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>